# ========================================
# Configuración de Ejemplo - IncidenciasTI
# ========================================
# Copiar este archivo a .env y ajustar según sea necesario

# ========== FRONTEND ==========
# URL de la API (sin la barra final)
VITE_API_URL=http://localhost:5268/api

# Modo de desarrollo (development/production)
VITE_MODE=development

# Nivel de logging del navegador
VITE_LOG_LEVEL=debug

# Timeout de peticiones HTTP (milisegundos)
VITE_REQUEST_TIMEOUT=30000

# ========== BACKEND - DATABASE ==========
# Base de datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=incidencias_ti
DB_USER=postgres
DB_PASSWORD=tu_contraseña_aqui

# MongoDB
MONGO_URI=mongodb://localhost:27017/IncidenciasLogs
MONGO_DATABASE=IncidenciasLogs

# ========== BACKEND - SERVIDOR ==========
# Puerto del servidor
API_PORT=5268

# Host
API_HOST=localhost

# ========== LOGGING ==========
# Nivel de logging (Debug, Information, Warning, Error, Critical)
LOG_LEVEL=Information

# Habilitar logs en consola
LOG_CONSOLE=true

# Archivo de log
LOG_FILE=logs/api.log

# ========== SEGURIDAD (FUTURO) ==========
# JWT Secret (para autenticación futura)
JWT_SECRET=tu_clave_secreta_muy_larga_aqui

# JWT Expiration (en minutos)
JWT_EXPIRATION=1440

# ========== SINCRONIZACIÓN ==========
# Intervalo de sincronización automática (segundos, 0 = deshabilitado)
SYNC_INTERVAL=0

# Timeout de sincronización (milisegundos)
SYNC_TIMEOUT=30000

# ========== CORS ==========
# Orígenes permitidos (separados por punto y coma)
CORS_ORIGINS=http://localhost:5173;http://localhost:3000

# ========== NOTIFICACIONES (FUTURO) ==========
# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_contraseña_app
SMTP_FROM=noreply@incidencias-ti.com

# ========== APLICACIÓN ==========
# Nombre de la aplicación
APP_NAME=IncidenciasTI

# Versión
APP_VERSION=1.0.0

# Ambiente (development/staging/production)
ENVIRONMENT=development

# URL pública de la aplicación
APP_URL=http://localhost:5173

# Habilitador de debug mode
DEBUG_MODE=true
